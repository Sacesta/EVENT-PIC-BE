# Environment
NODE_ENV=development

# Server
PORT=5000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/pic-backend

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS (comma-separated for multiple origins)
# For development: http://localhost:3000,http://localhost:5173
# For production: https://pic-fe.vercel.app

# Cloudinary (if using image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration (Hostinger SMTP)
EMAIL_FROM=office@pic-events.co.il
EMAIL_USER=office@pic-events.co.il
EMAIL_PASSWORD=your_hostinger_email_password

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Ethereal Email (for development testing)
ETHEREAL_USER=ethereal.user@ethereal.email
ETHEREAL_PASS=ethereal.pass

# Vercel (automatically set by Vercel)
VERCEL=true 